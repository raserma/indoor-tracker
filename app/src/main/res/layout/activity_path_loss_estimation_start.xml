<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.example.android.lsindoortracker.PathLossEstimationStartActivity">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_measurements"
        android:id="@+id/button_measurements"
        android:onClick="openDataMeasuringActivity"
        android:layout_marginBottom="112dp"
        android:layout_above="@+id/button_estimation"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_estimation"
        android:id="@+id/button_estimation"
        android:onClick="openApplyingRegressionActivity"
        android:layout_marginBottom="153dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/button_measurements"
        android:layout_alignEnd="@+id/button_measurements"
        android:layout_alignLeft="@+id/button_measurements"
        android:layout_alignStart="@+id/button_measurements" />
</RelativeLayout>