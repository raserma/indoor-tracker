<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.lsindoortracker" >

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainMenuActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PathLossEstimationStartActivity"
            android:label="@string/title_activity_path_loss_estimation" >
        </activity>
        <activity
            android:name=".ApplyingRegressionActivity"
            android:label="@string/title_activity_applying_regression" >
        </activity>
        <activity android:name=".AndroidDatabaseManager" />
        <activity
            android:name=".MeasuringDataActivity"
            android:label="@string/title_activity_measuring_data" >
        </activity>
        <activity
            android:name=".MapViewActivity"
            android:label="@string/title_activity_map_view" >
        </activity>
    </application>

</manifest>
